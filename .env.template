# Metadata Agent API Configuration
# ================================

# LLM Provider Selection
# Options: 'openai', 'b-api-openai', 'b-api-academiccloud'
METADATA_AGENT_LLM_PROVIDER=b-api-openai

# =========================================
# OpenAI Configuration (native OpenAI API)
# =========================================
OPENAI_API_KEY=sk-proj-your-api-key-here
METADATA_AGENT_OPENAI_API_BASE=https://api.openai.com/v1
METADATA_AGENT_OPENAI_MODEL=gpt-4o-mini
METADATA_AGENT_OPENAI_TEMPERATURE=0.3

# =========================================
# B-API Configuration (OpenEduHub)
# =========================================
# Shared API key for both B-API providers
B_API_KEY=your-b-api-key-here

# B-API OpenAI (OpenAI-compatible endpoint via B-API)
METADATA_AGENT_B_API_OPENAI_BASE=https://b-api.staging.openeduhub.net/api/v1/llm/openai
METADATA_AGENT_B_API_OPENAI_MODEL=gpt-4.1-mini

# B-API AcademicCloud (AcademicCloud endpoint via B-API)
METADATA_AGENT_B_API_ACADEMICCLOUD_BASE=https://b-api.staging.openeduhub.net/api/v1/llm/academiccloud
METADATA_AGENT_B_API_ACADEMICCLOUD_MODEL=deepseek-r1

# =========================================
# General LLM Settings
# =========================================
METADATA_AGENT_LLM_TEMPERATURE=0.3
METADATA_AGENT_LLM_MAX_TOKENS=2000
METADATA_AGENT_LLM_MAX_RETRIES=3
METADATA_AGENT_LLM_RETRY_DELAY=1.0

# =========================================
# Worker Settings
# =========================================
METADATA_AGENT_DEFAULT_MAX_WORKERS=10
METADATA_AGENT_REQUEST_TIMEOUT=60

# =========================================
# Default Schema Settings
# =========================================
METADATA_AGENT_DEFAULT_CONTEXT=default
# Use "latest" for automatic version detection, or specify like "1.8.0"
METADATA_AGENT_DEFAULT_VERSION=latest

# =========================================
# Normalization Settings
# =========================================
METADATA_AGENT_NORMALIZATION_ENABLED=true
METADATA_AGENT_NORMALIZATION_TEMPERATURE=0.1

# =========================================
# App Settings
# =========================================
METADATA_AGENT_DEBUG=false

# =========================================
# Input Source Settings
# =========================================
# Repository URLs for NodeID input source
METADATA_AGENT_REPOSITORY_PROD_URL=https://redaktion.openeduhub.net/edu-sharing/rest
METADATA_AGENT_REPOSITORY_STAGING_URL=https://repository.staging.openeduhub.net/edu-sharing/rest
# Default repository: 'prod' or 'staging'
METADATA_AGENT_REPOSITORY_DEFAULT=staging

# Text Extraction API for URL input source
METADATA_AGENT_TEXT_EXTRACTION_API_URL=https://text-extraction.staging.openeduhub.net
# Default extraction method: 'simple' or 'browser'
METADATA_AGENT_TEXT_EXTRACTION_DEFAULT_METHOD=simple

# =========================================
# Repository Upload (WLO edu-sharing)
# =========================================
# Required for /upload endpoint
# Get credentials from WLO admin
WLO_GUEST_USERNAME=
WLO_GUEST_PASSWORD=

# Optional: Override repository base URLs
# WLO_REPOSITORY_BASE_URL=https://repository.staging.openeduhub.net/edu-sharing
